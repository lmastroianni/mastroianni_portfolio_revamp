  <!-- CONTACT SECTION -->


  <section class="contact" id="section-3">
    <h3>LET'S CHAT</h3>
    

    <section class="contact-form boxContact">
      <div class="text">
        <label>Full Name :</label>
        <input type="text" name="name" value="" placeholder="Enter Your Name">
      </div>

      <div class="text">
        <label>Email :</label>
        <input type="email" email="email" value="" placeholder="Email">
      </div>

      <div class="text">
        <label>Message :</label>
        <textarea placeholder="Enter Your Message"></textarea>
      </div>

      <span class="btn2">SEND</span>


    </section>
  </section>





