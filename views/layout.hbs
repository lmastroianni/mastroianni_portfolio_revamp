  <!-- BANNER SECTION -->

  <section class="top-banner">

    <div class="logoHeader">
      <img src="images/red.svg" alt="Lucas Logo" height="50" width="50" id="logo">
    </div>



    <div id="section-1">

      <img id="mobileAvatar" src="images/mobile_avatar.png" height="60%" width="60%" alt="bio image" class="bio"
        class="responsive">
      <div id="deskAvatar">
        <img src="images/desktop_avatar1.png" alt="Desktop avatar" height="70%" width="70%" class="responsive">
      </div>
    </div>

    <div id="text">
      <h1>LUCAS MASTROIANNI</h1>
      <p>A video editor and
                    web designer from Dorchester, Ontario. I am a huge sports fan and a die hard Toronto Maple Leafs fan.
                    
                    I love advertisement, media, and ultimately how the human
                    brain perceives these things and how I can use creativity and
                    innovation to find ways to best influence and satisfy a user or
                    customer. Whether it is through video content or a project for the web, I am
                    passionate about producing content of the utmost quality and telling a story in an exceptional way.</p>
      <a href="https://docs.google.com/document/d/1ND28lykO7AhYgNN0s1wQqm7vk9fMIbqYKSZRZTQynpE/edit?usp=sharing" target="_blank"class="btn">View My Resumé!</a>
    </div>
    </div>
  </section>


  <!-- PORTFOLIO SECTION -->

  <section class="portfolioPieces">

    <h3>FEATURED PROJECTS</h3>

      <!-- this is the new section showing the featured items -->
       <section class="boxes">
      {{#each hero}}
      
        <div id="section-3">
          <div id="box1">
        {{!-- <span>Here's where you would add whatever markup you want!</span> --}}
        <img src="images/{{Images}} " width="100%" height="100%" class="responsive {{1Type}}">
        <span class="see-more" class="data" data-target="{{ID}}">READ MORE</span>
        </div>
        </div>
       
     
      {{/each}}
      </section>

   
<h3>MY WORK</h3>
